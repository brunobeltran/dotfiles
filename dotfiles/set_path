# airwave connects windows VSTs to my pure-linux Bitwig Studio install
export PATH="${PATH}:/opt/airwave/bin"

# Zotero is my citation manager. unlike the firefox extension, the chrome
# extension requires the desktop program to be running in the background
export PATH="${PATH}:/opt/Zotero_linux-x86_64:~/bin/Zotero_linux-x86_64"

# For rust developement.
export PATH="${HOME}/.cargo/bin:$PATH"

# Homebrew on Macs (and sometimes on Linux as well)!
export PATH="/opt/homebrew/bin:${PATH}"

# I like begin able to execute things in the working directory with highest
# priority
export PATH=".:~/bin:${PATH}"
